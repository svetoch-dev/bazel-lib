{
  "company": {
    "domain": "rod.svetoch.dev",
    "name": "rod"
  },
  "ci": {
    "type": "gha",
    "group": "svetoch-dev"
  },
  "repo": {
    "type": "gha",
    "group": "svetoch-dev"
  },
  "envs": {
    "internal": {
      "name": "internal",
      "short_name": "int",
      "import_secrets": {
        "redis": {
          "name": "argocd-redis",
          "namespace": "argocd",
          "secrets_to_import": [
            "password", "redis-password"
          ]
        },
        "alertmanager": {
          "name": "alertmanager",
          "namespace": "prometheus",
          "secrets_to_import": [
            "receiver-secret"
          ]
        },
        "sso": {
          "name": "sso",
          "namespace": "pomerium",
          "secrets_to_import": [
            "client_id",
            "client_secret"
          ]
        }
      },
      "tf_backend": {
        "type": "gcs",
        "configs": {
          "bucket": "{company.name}-tf-state",
          "prefix": "{env.name}/{tf_backend.state_name}"
        }
      },
      "cloud": {
        "name": "gcp",
        "id": "rod-internal",
        "region": "europe-west2",
        "default_zone": "europe-west2-c",
        "multi_region": "EU",
        "network": {
          "vm_cidr": "10.0.0.0/20",
          "k8s_pod_cidr": "10.4.0.0/14",
          "k8s_service_cidr": "10.1.0.0/20"
        },
        "registry": "{env.cloud.region}-docker.pkg.dev/{env.cloud.id}/containers",
        "buckets": {
          "deletion_protection": "false"
        }
      },
      "kubernetes": {
        "enabled": "true",
        "regional": "false",
        "node_locations": [
          "europe-west2-a"
        ],
        "deletion_protection": "false",
        "auth_group": ""
      }
    },
    "production": {
      "name": "production",
      "short_name": "prd",
      "import_secrets": {
        "alertmanager": {
          "name": "alertmanager",
          "namespace": "prometheus",
          "secrets_to_import": [
            "receiver-secret"
          ]
        },
        "sso": {
          "name": "sso",
          "namespace": "pomerium",
          "secrets_to_import": [
            "client_id",
            "client_secret"
          ]
        }
      },
      "tf_backend": {
        "type": "gcs",
        "configs": {
          "bucket": "{company.name}-tf-state",
          "prefix": "{env.name}/{tf_backend.state_name}"
        }
      },
      "cloud": {
        "name": "gcp",
        "id": "rod-production",
        "region": "europe-west2",
        "default_zone": "europe-west2-c",
        "multi_region": "EU",
        "network": {
          "vm_cidr": "10.8.0.0/20",
          "k8s_pod_cidr": "10.12.0.0/14",
          "k8s_service_cidr": "10.9.0.0/20"
        },
        "registry": "{env.cloud.region}-docker.pkg.dev/{env.cloud.id}/containers",
        "buckets": {
          "deletion_protection": "false"
        }
      },
      "kubernetes": {
        "enabled": "true",
        "regional": "true",
        "deletion_protection": "false",
        "node_locations": [
          "europe-west2-a"
        ],
        "auth_group": ""
      }
    }
  }
}
